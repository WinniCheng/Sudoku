<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="Application Settings">

        <CheckBoxPreference
            android:key="@string/pref_splash_key"
            android:title="Sound"
            android:summary="Turn on or turn off the sound effect"
            android:defaultValue="" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screen settings">

        <CheckBoxPreference
            android:key="@string/pref_splash_key"
            android:title="Splash screen"
            android:summary="Display the splash screen when launching the application"
            android:defaultValue="@bool/pref_splash_default" />

    </PreferenceCategory>
</PreferenceScreen>
